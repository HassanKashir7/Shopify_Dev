{%- style -%}
  .hero-fragrance {
    display: flex;
    min-height: 600px;
    overflow: hidden;
  }

  .hero-fragrance__left-panel {
    flex: 1;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-fragrance__right-panel {
    flex: 1;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-fragrance__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .hero-fragrance__content {
    position: relative;
    z-index: 2;
    max-width: 500px;
    padding: 60px 40px;
    text-align: left;
  }

  .hero-fragrance__headline {
    font-family: 'Playfair Display', serif;
    font-size: 48px;
    font-weight: 400;
    color: #ffffff;
    line-height: 1.2;
    margin-bottom: 24px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-fragrance__body-text {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    color: #ffffff;
    line-height: 1.6;
    margin-bottom: 32px;
    opacity: 0.95;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .hero-fragrance__cta-button {
    display: inline-block;
    background: #ffffff;
    color: #8B4513;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .hero-fragrance__cta-button:hover {
    background: transparent;
    color: #ffffff;
    border-color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }

  @media screen and (max-width: 768px) {
    .hero-fragrance {
      flex-direction: column;
      min-height: auto;
    }

    .hero-fragrance__left-panel,
    .hero-fragrance__right-panel {
      min-height: 400px;
    }

    .hero-fragrance__content {
      padding: 40px 20px;
      text-align: center;
    }

    .hero-fragrance__headline {
      font-size: 36px;
    }

    .hero-fragrance__body-text {
      font-size: 16px;
    }
  }
{%- endstyle -%}

<div class="hero-fragrance">
  <!-- Left Panel -->
  <div class="hero-fragrance__left-panel">
    {%- if section.settings.left_image != blank -%}
      <img 
        src="{{ section.settings.left_image | image_url: width: 800 }}" 
        alt="{{ section.settings.left_image.alt | escape }}"
        class="hero-fragrance__image"
        loading="lazy"
      >
    {%- endif -%}
    
    <div class="hero-fragrance__content">
      <h1 class="hero-fragrance__headline">
        {{ section.settings.headline | default: 'Where Scent Meets Story' }}
      </h1>
      <p class="hero-fragrance__body-text">
        {{ section.settings.body_text | default: 'Step into a world of curated fragrances and bespoke blends—crafted just for you. Whether you\'re discovering a signature scent or creating one from scratch, Maison Veil is where elegance meets individuality.' }}
      </p>
      <a href="{{ section.settings.cta_link | default: routes.collections_url }}" class="hero-fragrance__cta-button">
        {{ section.settings.cta_text | default: 'Shop now' }}
      </a>
    </div>
  </div>

  <!-- Right Panel -->
  <div class="hero-fragrance__right-panel">
    {%- if section.settings.right_image != blank -%}
      <img 
        src="{{ section.settings.right_image | image_url: width: 800 }}" 
        alt="{{ section.settings.right_image.alt | escape }}"
        class="hero-fragrance__image"
        loading="lazy"
      >
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Hero Fragrance",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Panel Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Panel Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Where Scent Meets Story"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "Step into a world of curated fragrances and bespoke blends—crafted just for you. Whether you're discovering a signature scent or creating one from scratch, Maison Veil is where elegance meets individuality."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Fragrance"
    }
  ]
}
{% endschema %} 